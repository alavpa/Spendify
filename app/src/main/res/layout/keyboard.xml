<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/background"
             android:stretchColumns="0,1,2">

    <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_one"
                app:text="1"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_two"
                app:text="2"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_three"
                android:layout_height="match_parent"
                app:text="3"/>
    </TableRow>

    <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_four"
                app:text="4"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_five"
                app:text="5"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_six"
                android:layout_height="match_parent"
                app:text="6"/>
    </TableRow>

    <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_seven"
                app:text="7"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_eight"
                app:text="8"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_nine"
                android:layout_height="match_parent"
                app:text="9"/>
    </TableRow>

    <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_dot"
                app:text="."
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_zero"
                app:text="0"
                android:layout_height="match_parent"/>

        <com.alavpa.spendify.ui.custom.keyboard.KeyText
                android:id="@+id/key_action"
                android:layout_height="match_parent"
                app:text="Del."/>
    </TableRow>


</TableLayout>