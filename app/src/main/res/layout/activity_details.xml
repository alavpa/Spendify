<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.alavpa.spendify.ui.details.DetailsActivity">

    <TextView android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repetir"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cada"
            android:layout_marginRight="@dimen/margin"/>

        <EditText android:id="@+id/et_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="2"
            android:inputType="number"
            android:layout_marginRight="@dimen/margin"/>

        <Spinner android:id="@+id/sp_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/periodos"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        android:inputType="text"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <Button android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
